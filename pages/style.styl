.btn {
  -webkit-appearance: none;
  -webkit-user-select: none;
  background-image: -webkit-linear-gradient(#ededed, #ededed 38%, #dedede);
  border: 1px solid rgba(0, 0, 0, 0.25);
  border-radius: 2px;
  box-shadow: 0 1px 0 rgba(0, 0, 0, 0.08), inset 0 1px 2px rgba(255, 255, 255, 0.75);
  color: #444;
  font: inherit;
  margin: 0 1px 0 10px;
  outline: none;
  text-shadow: 0 1px 0 rgb(240, 240, 240);

  //min-height: 2em;
  min-width: 4em;
  padding-top: 1px;
  padding-bottom: 2px;

  -webkit-padding-end: 10px;
  -webkit-padding-start: 10px;

  white-space: nowrap;

  font-size: 14px;
  text-decoration: none;
  top: -2px;
  position: relative;

  &[data-locked="true"] {
    opacity: 0.6;
    cursor: default
  }
}

#left_col {

  width: 10%;
  float: left;

  .inner {
    border-right: 1px #eee solid;
    padding: 0 10px;
  }

  a {
    display: block;
    margin-left: -10px;
    margin-bottom: 5px;
    padding-left: 5px;
    font-size: 14px;
    color: #999;
    border-left: 6px transparent solid
    text-decoration: none
  }
  a.selected {
    border-left-color: rgb(78, 87, 100)
    color: rgb(70, 78, 90);
  }

  h2 {
    color: headersColor;
    font-weight: normal;
  }

}

#settings {
  margin-top: 20px
}

#right_col {

  width: 90%;
  float: right;

  .inner {
    padding: 0 30px;
  }

  h1 {
    margin: 10px 0;
    color: headersColor;
    font-weight: normal;
    float: left;
  }
}

.hidden {
  display: none!important
}

.inner {
  header {
    background: #FFF;
    width: 938px;
    position: fixed;
    top: 0;
    z-index: 3;
    border-bottom: 1px #eee solid;
  }
  .header-extras {
    float: right;
    margin-top: 20px;
  }
}

.inline-spinner, .spinner {
  background-image: url("data:image/svg+xml;base64,");
  background-size: 100%;
  width: 16px;
  height: 16px;
}

.screen {
  padding-top: 50px;
  max-width: 938px;
  min-width: 576px;

  table {
    width: 100%
    border-collapse: collapse;

    tr {
      border-top: 1px #eee solid;
    }

    td {
      padding: 5px
      //border: 1px #ccc solid;
      height: 25px
      vertical-align: top
    }

    .sel_td {
      width: 20px;
      padding-top: 9px;
    }
    .name_td {
      width: 300px
    }

    tr:not(.shared) td.name_td {
      cursor: pointer
    }
    tr:not(.shared) td.content_td > div {
      cursor: pointer
    }

    .content_td {
      width: 400px

        &>div {
            width: 400px
            word-wrap: break-word
	        background: #000;
	        -webkit-background-clip: text;
	        -webkit-text-fill-color: transparent;
        }
    }
    .butt_td {
      width: 150px
      vertical-align: middle
    }

    .btn {
      display: none
      top: 0
    }

    tr:not(.shared):hover {
      background-color: rgba(0, 0, 0, .05);

      .btn {
        display: inline
      }

		.morelink {
			background: none
		}
    }
    tr:focus {
      background: #eeffe7
    }


    .name {
      font-size: 18px
    }
    .snip {
      background: #f1f1f1;
      display: inline-block;
      padding: 3px 5px;
      border: 1px #d3d3d3 solid;
      border-radius: 5px;
      font-size: 18px;
      margin-top: 5px;
    }

    .shared_by {
      font-style: italic
      color: #ababab;
    }
  }
}

#overlay-container {
  -webkit-box-align: center;
  -webkit-box-orient: vertical;
  -webkit-box-pack: center;
  -webkit-perspective: 1px;
  -webkit-transition: 200ms opacity;
  background-color: rgba(255, 255, 255, 0.75);
  bottom: 0;
  display: -webkit-box;
  left: 0;
  overflow: auto;
  padding: 20px;
  position: fixed;
  right: 0;
  top: 0;
  z-index: 11;

  .page {
    -webkit-border-radius: 3px;
    -webkit-box-orient: vertical;
    -webkit-transition: 200ms transform;
    background: white;
    box-shadow: 0 4px 23px 5px rgba(0, 0, 0, 0.2), 0 2px 6px rgba(0,0,0,0.15);
    color: #333;
    display: -webkit-box;
    min-width: 400px;
    padding: 0;
    position: relative;
    z-index: 0;

    padding-bottom: 25px;

      p {
        padding: 0 17px; //0 20px;
      }

    h1 {
      -webkit-padding-end: 24px;
      -webkit-user-select: none;
      color: #333;
      font-size: 120%;
      margin: 0;
      padding: 14px 17px 14px;
      text-shadow: white 0 1px 2px;
    }
  }

  .close-button {
    background-image: url(closeImage);
    background-position: center;
    background-repeat: no-repeat;
    height: 14px;
    position: absolute;
    right: 7px;
    top: 7px;
    width: 14px;
    z-index: 1;

    &:hover {
      background-image: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAA4AAAAOCAQAAAC1QeVaAAAAnUlEQVR4XoWQQQ6CQAxFewjkJkMCyXgJPMk7AiYczyBeZEAX6AKctGIaN+bt+trk9wtGQc/IkhnoKGxqqiWxOSZalapWFZ6VrIUDExsN0a5JRBq9LoVOR0eEQMoEhKizXhhsn0p1sCWVo7CwOf1RytPL8CPvwuBUoHL6ugeK30CVD1TqK7V/hdpe+VNChhOzV8xWny/+xosHF8578W/Hmc1OOC3wmwAAAABJRU5ErkJggg==')
      cursor: pointer
    }
  }

  input {
    display: block;
    margin-bottom: 10px;
    margin-top: 5px;
    width: 90%
  }

  label,input {
    margin-left: 17px
  }

  .btn {
    top: 10px;
    display: inline-block;
    text-align: center;

    &#share_keystroke,
    &#save_keystroke,
    &.share_open_login {
      margin-left: 17px
    }
  }

}

.mce-tinymce {
  margin-top: 5px!important;
  margin-right: 17px!important;
  margin-bottom: 5px!important;
  margin-left: 17px!important;
}
#templ_content_editor {
  padding: 0 10px;
  font-size: 14px
}

#shortcut_field,
#snippet_field{
  width: 110px;
  cursor: pointer
}
#screen_settings {
  .content {
    margin-top: 20px;

    label {
      display: block
    }

    .btn {
      display: inline-block
      cursor: pointer
      margin-top: 20px;
      margin-left: 0
    }
  }
  .warn {
    background: #fbfad3;
    padding: 3px 10px;
    margin-bottom: 10px;
  }
}

.loading_wrap {
  margin-left: 17px
}

#shared_to {
  margin: 0
}

#shared_list {
  margin: 0 0 10px 0

  li {
    .unshare {
      visibility: hidden
      cursor: pointer
      background-image: url(closeImage);
      background-position: center;
      background-repeat: no-repeat;
      height: 14px;
      width: 14px;
      margin-bottom: -4px;
      display: inline-block;
    }

    &:hover .unshare {
      visibility: visible
    }
  }
}

#first_run_notice {
  background: #fbfad3;
  padding: 3px 10px;
  margin-bottom: 10px;
  cursor: pointer
}

.morelink {
    color: #2c8c91;
	display: block;
	background: linear-gradient(to bottom, rgba(255,255,255,0) 0%,rgba(255,255,255,1) 23%,rgba(255,255,255,1) 100%);
	height: 30px;
	line-height: 40px;
	margin-top: -5px;
}

#loading-spinner {
  margin-top: 10px;
}
